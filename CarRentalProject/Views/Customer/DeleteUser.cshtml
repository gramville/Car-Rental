@model CarRental.Models.customer

@{
    ViewData["Title"] = "DeleteUser";
}

<h1>DeleteUser</h1>

<h3>Are you sure you want to delete this?</h3>
<label>First Name</label>
<input placeholder="@Model.FirstName" />
<label>Middle Name</label>
<input placeholder="@Model.MiddleName" />
<label>Last Name</label>
<input placeholder="@Model.LastName" />
<label>Phone</label>
<input placeholder="@Model.Phone" />
<label>Email</label>
<input placeholder="@Model.Email" />
